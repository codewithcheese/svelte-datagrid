{
	"name": "svelte-datagrid",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"preview:cf": "pnpm build && wrangler dev",
		"deploy": "pnpm build && wrangler deploy",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json && lychee 'docs/**/*.md' 'README.md'",
		"check:links": "lychee 'docs/**/*.md' 'README.md'",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"bench": "vitest bench",
		"bench:ci": "vitest bench --reporter=json --outputFile=benchmark-results.json",
		"e2e": "playwright test",
		"e2e:ui": "playwright test --ui"
	},
	"devDependencies": {
		"@electric-sql/pglite": "^0.3.14",
		"@playwright/test": "^1.49.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@testing-library/jest-dom": "^6.6.0",
		"@testing-library/svelte": "^5.2.0",
		"@testing-library/user-event": "^14.5.0",
		"@vitest/browser": "^4.0.0",
		"@vitest/browser-playwright": "^4.0.16",
		"@vitest/coverage-v8": "^4.0.0",
		"@vitest/ui": "^4.0.0",
		"jsdom": "^25.0.0",
		"mdsvex": "^0.12.6",
		"shiki": "^3.20.0",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"typescript": "^5.9.3",
		"vite": "^7.2.6",
		"vitest": "^4.0.0",
		"vitest-browser-svelte": "^2.0.1",
		"wrangler": "^4.54.0"
	}
}
